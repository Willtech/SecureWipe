#! /bin/sh
echo first pass. && \
dd if=/dev/urandom of=/dev/sdi bs=1M status=progress && \
echo first pass.. && \
dd if=/dev/urandom of=/dev/sdi bs=1M status=progress && \
echo first pass... && \
dd if=/dev/urandom of=/dev/sdi bs=1M status=progress && \
echo first pass.... && \
dd if=/dev/urandom of=/dev/sdi bs=1M status=progress && \
echo first pass..... && \
dd if=/dev/urandom of=/dev/sdi bs=1M status=progress && \
echo first pass...... && \
dd if=/dev/urandom of=/dev/sdi bs=1M status=progress && \
echo first pass....... && \
dd if=/dev/urandom of=/dev/sdi bs=1M status=progress && \
echo completed first pass!
exit


